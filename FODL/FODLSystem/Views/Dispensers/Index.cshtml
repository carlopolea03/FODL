

@{
    ViewData["Title"] = "List";
}
<style>
    tfoot {
        display: table-header-group;
    }
    .dataTables_length {
        display: none;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-11">
        <h2>
            Dispensers
        </h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index","Home")">Home</a>
            </li>
            <li class="breadcrumb-item">
                Option Settings
            </li>
            <li class="breadcrumb-item active">
                <strong>
                    List
                </strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-8">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>
                        List
                    </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link" href="@Url.Action("Index","Home")">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <p>
                        
                        <a class="btn btn-white btn-bitbucket" title="New" href="#" onclick="addmodal();">
                            <i class="fa fa-file"></i>
                        </a>
                    </p>
                    <table id="tbl" class="table table-striped table-no-bordered table-hover dataTable" style="width: 100%!important">

                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>New Name</th>
                                <th>Location Code</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>New Name</th>
                                <th>Location Code</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal inmodal in " id="modalItem" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <h4 class="modal-title" id="modalSnapTitle">Dispenser Information </h4>
                <small class="font-bold">Modify details of this dispenser</small>
            </div>
            <div class="modal-body">
                <input id="itemId" type="hidden" />

                <div class="form-group">
                    <label>No</label>
                    <input class="form-control" id="itemNo" />
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" id="itemName" />
                </div>
                <div class="form-group">
                    <label>New Name</label>
                    <input class="form-control" id="newName" />
                </div>
                <div class="form-group">
                    <label>Location Code</label>
                    @Html.DropDownList("LocationCode", null, "", new { style = "width:100%", @class = "form-control " })
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <select id="itemStatus" class="form-control ">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>

                <button data-dismiss="modal" class="btn btn-default">Close</button>
                <button id="btnSave" class="btn btn-primary" onclick="saveItem();">Save</button>


            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    function saveItem() {
        $id = $("#itemId").val();
        $no = $("#itemNo").val();
        $name = $("#itemName").val();
        $newname = $("#newName").val();
        $LocationCode = $("#LocationCode").val();

        $.ajax({
                url: "@Url.Action("SaveItem")"
                    , method: "POST"
            , data: { id: $id, No: $no, Name: $name, NewName: $newname, LocationCode: $LocationCode, status: $("#itemStatus").val()}
                    , dataType: 'json'
                    , success: function (responsedata) {
                        if (responsedata.status == "success") {
                            toastr["success"]("Data saved!", "<b>Success</b> ")
                            loadDatatable();
                            $('#modalItem').modal('hide');
                        } else {
                            toastr["error"](responsedata.message)
                            toastr.options = {
                                "closeButton": true,
                                "showDuration": "3000",
                            }
                        }
                    }
               })


    }
    $(function () {
        var searchCol = 0;
        $('#tbl tfoot th').each(function () {

            var title = $(this).text();
            if (title == "") {

            } else {
                $(this).html('<input  id="searchCol[' + searchCol + ']" type="text" placeholder="Search ' + title + '" style="margin:0;font-size:14px;padding:6px 12px;border:1px solid #e5e6e7;color:inherit; width:100%" />');
                searchCol++;
            }
            searchCol++;
        });

        loadDatatable();
    })

    function loadDatatable() {


        if ($.fn.DataTable.isDataTable('#tbl')) {
            $('#tbl').DataTable().destroy();
        }

        var table = $("#tbl").DataTable({
            "processing": true,
            "serverSide": true,
            "searching": true,
            "fixedHeader": true,
            "ajax": {
                "url": "@Url.Action("getData")",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [

                { "data": "no", "name": "No", "autoWidth": true },
                { "data": "name", "name": "Name", "autoWidth": true },
                { "data": "newName", "name": "NewName", "autoWidth": true },
                { "data": "locationCode", "name": "locationCode", visible:false },
                { "data": "locationCodeName", "name": "locationCode", "autoWidth": true },
                { "data": "status", "name": "status", "autoWidth": true },
                {
                    //data-no=' + row.no + ' data - desc=' + row.description + ' data - desc2=' + row.description2 + ' data - descliq=' + row.OfficeCode + ' data - type=' + row.typeList +
                    render: function (data, type, row) {

                        $actions =
                            "<a title='Edit' data-status ='" + row.status + "' data-id=" + row.id + " data-no='" + row.no + "' data-name='" + row.name + "' data-newName='" + row.newName + "' data-locationCode='" + row.locationCode + "' onclick='showmodal(this);'>Edit</a>";

                        return $actions;
                    }
                }


            ]
            //,
            //"columnDefs": [{ "orderable": false, "targets": [1, 2, 3] }]


        });




        $(document).on("keyup", '[id ^= "searchCol"]', function (e) {
            if (e.which == 13) {
                var Id = $(this).attr('id');

                var col = Id.replace(/[^0-9]/g, '');

                table.columns(col).search(this.value).draw();
            }
        });
        function searchFunction(e) {

            delay(function () {
                console.log(e);
                table.column($(e).parent().index() + ':visible')
                    .search(e.value)
                    .draw();
            }, 1000);
        }
        $("#tbl_filter").hide();
    }

    var delay = (function () {
        var timer = 0;
        return function (callback, ms) {
            clearTimeout(timer);
            timer = setTimeout(callback, ms);
        };
    })();

    function showmodal(obj) {
        $id = $(obj).attr('data-id');
        $no = $(obj).attr('data-no') == "null" ? "" : $(obj).attr('data-no');
        $name = $(obj).attr('data-name') == "null" ? "" : $(obj).attr('data-name');
        $newName = $(obj).attr('data-newName') == "null" ? "" : $(obj).attr('data-newName');
        $locationcode = $(obj).attr('data-locationCode') == "null" ? "" : $(obj).attr('data-locationCode');
       
        $("#itemId").val($id);
        $("#itemNo").val($no);
        $("#itemName").val($name);
        $("#newName").val($newName);
        $("#LocationCode").val($locationcode).trigger('change');
        $status = $(obj).attr('data-name') == "null" ? "Active" : $(obj).attr('data-status');
        $("#itemStatus").val($status);
        $('#modalItem').modal('show');


    }
    function addmodal(obj) {
        $("#itemId").val(0);
        $("#itemNo").val('');
        $("#itemName").val('');
        $("#newName").val('');
        $("#LocationCode").val('').trigger('change');
        $("#status").val("Active");
        $('#modalItem').modal('show');



    }


    </script>
    }
