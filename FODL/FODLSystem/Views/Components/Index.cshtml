

@{
    ViewData["Title"] = "List";
}
<style>
    tfoot {
        display: table-header-group;
    }
    .dataTables_length {
        display: none;
    }
    .dataTables_filter{
        display:none;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-11">
        <h2>
            Components
        </h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index","Home")">Home</a>
            </li>
            <li class="breadcrumb-item">
                Option Settings
            </li>
            <li class="breadcrumb-item active">
                <strong>
                    List
                </strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>
                        List
                    </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link" href="@Url.Action("Index","Home")">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-no-bordered table-hover dataTable" style="width: 100%!important">

                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Description</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Code</th>
                                <th>Description</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal inmodal in " id="modalItem" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <h4 class="modal-title" id="modalSnapTitle">Component Information </h4>
                <small class="font-bold">Modify details of this component</small>
            </div>
            <div class="modal-body">
                <input id="itemId" type="hidden" />

                <div class="form-group">
                    <label>Code</label>
                    <input class="form-control" id="itemCode" />
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" id="itemName" />
                </div>

                <button data-dismiss="modal" class="btn btn-default">Close</button>
                <button id="btnSave" class="btn btn-primary" onclick="saveItem();">Save</button>


            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    function saveItem() {
        $id = $("#itemId").val();
        $Code = $("#itemCode").val();
        $name = $("#itemName").val();


        $.ajax({
                url: "@Url.Action("SaveItem")"
                    , method: "POST"
            , data: { id: $id, Code: $Code, Name: $name }
                    , dataType: 'json'
                    , success: function (responsedata) {
                        if (responsedata.status == "success") {
                            toastr["success"]("Data saved!", "<b>Success</b> ")
                            loadDatatable();
                        } else {
                            toastr["error"](responsedata.message)
                            toastr.options = {
                                "closeButton": true,
                                "showDuration": "3000",
                            }
                        }
                    }
               })


    }
    $(function () {
        var searchCol = 0;
        $('#tbl tfoot th').each(function () {

            var title = $(this).text();
            if (title == "") {

            } else {
                $(this).html('<input  id="searchCol[' + searchCol + ']" type="text" placeholder="Search ' + title + '" style="margin:0;font-size:14px;padding:6px 12px;border:1px solid #e5e6e7;color:inherit; width:100%" />');
                searchCol++;
            }
            searchCol++;
        });

        loadDatatable();
    })

    function loadDatatable() {


        if ($.fn.DataTable.isDataTable('#tbl')) {
            $('#tbl').DataTable().destroy();
        }

        var table = $("#tbl").DataTable({
            "processing": true,
            "serverSide": true,
            "searching": true,
            "fixedHeader": true,
            "ajax": {
                "url": "@Url.Action("getData")",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [

                { "data": "code", "name": "Code", "autoWidth": true },

                { "data": "description", "name": "Description", "autoWidth": true },
                {
                    //data-no=' + row.no + ' data - desc=' + row.description + ' data - desc2=' + row.description2 + ' data - descliq=' + row.OfficeCode + ' data - type=' + row.typeList +
                    render: function (data, type, row) {


                        $name = (row.name == "") ? null : row.name;

                        $actions =
                            "<a title='Edit' data-id=" + row.id + " data-code='" + row.code + "'  data-description='" + row.description + "' onclick='showmodal(this);'>Edit</a>";

                        return $actions;
                    }
                }


            ]
            //,
            //"columnDefs": [{ "orderable": false, "targets": [1, 2, 3] }]


        });



        $(document).on("keyup", '[id ^= "searchCol"]', function (e) {
            if (e.which == 13) {
                var Id = $(this).attr('id');

                var col = Id.replace(/[^0-9]/g, '');

                table.columns(col).search(this.value).draw();
            }
        });
        function searchFunction(e) {

            delay(function () {
                console.log(e);
                table.column($(e).parent().index() + ':visible')
                    .search(e.value)
                    .draw();
            }, 1000);
        }
        $("#tbl_filter").hide();
    }

    var delay = (function () {
        var timer = 0;
        return function (callback, ms) {
            clearTimeout(timer);
            timer = setTimeout(callback, ms);
        };
    })();

    function showmodal(obj) {
        $id = $(obj).attr('data-id');
        $code = $(obj).attr('data-code') == "null" ? "" : $(obj).attr('data-code');
        $name = $(obj).attr('data-description') == "null" ? "" : $(obj).attr('data-description');

        $("#itemId").val($id);
        $("#itemCode").val($code);
        $("#itemName").val($name);

        $('#modalItem').modal('show');


    }



    </script>
    }
