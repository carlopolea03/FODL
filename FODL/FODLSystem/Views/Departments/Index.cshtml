@model IEnumerable<FODLSystem.Models.Department>

@{
    ViewData["Title"] = "Dept";
}

<style>
    tfoot {
        display: table-header-group;
    }

    .dataTables_length {
        display: none;
    }
    .dataTables_filter {
        display: none;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-11">
        <h2>
           Departments
        </h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index","Home")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Fuel Oil Liquidation</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>
                    List
                </strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-5">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>
                        List
                    </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link" href="@Url.Action("Index","Home")">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <p class="button-container">
                        <a class="btn btn-white dim" title="New" href="@Url.Action("Create")">
                            <i class="fa fa-file"></i>
                        </a>
                        @*<a href="#" onclick="Sync(); return false;" title="Synchronize to NAV" class="anchorAction btn btn-success btn-bitbucket">
                            <i class="fa fa-refresh"></i>
                            <span>&nbsp;Synchronize to NAV</span>
                        </a>*@

                    </p>
                    <table id="tbl" class="table table-striped table-no-bordered table-hover dataTable" style="width: 100%!important">
                        <thead>
                            <tr>
                                <th>Code</th>

                                <th>Name</th>
                                <th>Company</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Code</th>

                                <th>Name</th>
                                <th>Company</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var searchCol = 0;
        $('#tbl tfoot th').each(function () {

            var title = $(this).text();
            if (title == "") {

            } else {
                $(this).html('<input  id="searchCol[' + searchCol + ']" type="text" placeholder="Search ' + title + '" style="margin:0;font-size:14px;padding:6px 12px;border:1px solid #e5e6e7;color:inherit; width:100%" />');
                searchCol++;
            }
            searchCol++;
        });
        var table = $("#tbl").DataTable({
            "processing": true,
            "serverSide": true,
            "searching": true,
            "fixedHeader": true,
            "ajax": {
                "url": "@Url.Action("getData")",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [

                { "data": "code", "name": "Code", "autoWidth": true },

                { "data": "name", "name": "Name", "autoWidth": true },
                { "data": "companyName", "name": "CompanyName", "autoWidth": true },
                {
                    //data-no=' + row.no + ' data - desc=' + row.description + ' data - desc2=' + row.description2 + ' data - descliq=' + row.OfficeCode + ' data - type=' + row.typeList +
                    render: function (data, type, row) {

                       var linkEdit = "@Url.Action("Edit", "Departments")?id="+ row.id;

                        $actions = '<a title="Edit" class="btn btn - white btn - bitbucket" href="' + linkEdit + '"><i class="fa fa - list"></i>Edit</a>';

                        return $actions;
                    }
                }


            ]
            //,
            //"columnDefs": [{ "orderable": false, "targets": [1, 2, 3] }]


        });
        $(document).on("keyup", '[id ^= "searchCol"]', function (e) {
            if (e.which == 13) {
                var Id = $(this).attr('id');

                var col = Id.replace(/[^0-9]/g, '');

                table.columns(col).search(this.value).draw();
            }
        });
     function Sync() {
        $.ajax({
            type: 'POST',
            url: "@Url.Action("GetDimension")",
            dataType: "json",
            success: function (data) {

                if (data.status == "OK") {
                    location.reload();
                }
                else {
                    alert(data.message);
                }

            }
        });
    }
    </script>
}
