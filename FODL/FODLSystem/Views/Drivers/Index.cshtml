
@{
    ViewData["Title"] = "Index";
}
<style>
    tfoot {
        display: table-header-group;
    }
    .dataTables_length{
        display:none;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-11">
        <h2>
            Drivers
        </h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index","Home")">Home</a>
            </li>
            <li class="breadcrumb-item">
                Option Settings
            </li>
            <li class="breadcrumb-item active">
                <strong>
                    List
                </strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-8">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>
                        List
                    </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link" href="@Url.Action("Index","Home")">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <p>
                        <a class="btn btn-white btn-bitbucket" title="New" href="#" onclick="addmodal();">
                            <i class="fa fa-file"></i>
                        </a>
                    </p>
                    <table id="tbl" class="table table-striped table-no-bordered table-hover dataTable" style="width: 100%!important">

                        <thead>
                            <tr>
                                <th>ID No</th>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Status</th>

                                <th>Action</th>

                            </tr>

                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID No</th>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Status</th>

                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal inmodal in " id="modalItem" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <h4 class="modal-title" id="modalSnapTitle">Lube Truck Information </h4>
                <small class="font-bold">Modify details of this lube truck</small>
            </div>
            <div class="modal-body">
                <input id="itemId" type="hidden" />

                <div class="form-group">
                    <label>ID No</label>
                    <input class="form-control" id="IDNo" />
                </div>
                <div class="form-group">

                    <label>Name</label>
                    <input class="form-control" id="DriverName" />
                </div>

                <div class="form-group">

                    <label>Position</label>
                    <input class="form-control" id="Position" />
                </div>
                <div class="form-group">
                    <label class="control-label">Status</label>
                    <select id="Status" name="Status" style="width:400px" class="form-control">
                        <option value="Enabled">Enabled</option>
                        <option value="Disabled">Disabled</option>
                    </select>
                </div>


                <button data-dismiss="modal" class="btn btn-default">Close</button>
                <button id="btnSave" class="btn btn-primary" onclick="saveItem();">Save</button>


            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
    function saveItem() {
        $id = $("#itemId").val();
        $no = $("#IDNo").val();
        $position = $("#Position").val();
        $name = $("#DriverName").val();
        $status = $("#Status").val();
        $.ajax({
                url: "@Url.Action("SaveItem")"
                    , method: "POST"
                    , data: { ID: $id, IdNumber: $no, Name: $name, Position: $position, Status: $status }
                    , dataType: 'json'
            , success: function (responsedata) {
                console.log(responsedata);
                        if (responsedata.status == "success") {
                            toastr["success"]("Data saved!", "<b>Success</b> ")
                            $("#itemId").val(responsedata.itemid);
                            loadDatatable();
                            $('#modalItem').modal('hide');
                        } else {
                            toastr["error"](responsedata.message)
                            toastr.options = {
                                "closeButton": true,
                                "showDuration": "3000",
                            }
                        }
                    }
               })


    }
    $(function () {
        var searchCol = 0;
        $('#tbl tfoot th').each(function () {

            var title = $(this).text();
            if (title == "") {

            } else {
                $(this).html('<input  id="searchCol[' + searchCol + ']" type="text" placeholder="Search ' + title + '" style="margin:0;font-size:14px;padding:6px 12px;border:1px solid #e5e6e7;color:inherit; width:100%" />');
                searchCol++;
            }
            searchCol++;
        });

        loadDatatable();
    })

    function loadDatatable() {
        //$id = $("#itemId").val();
        //$no = $("#IDNo").val();
        //$position = $("#Position").val();
        //$name = $("#DriverName").val();
        //$status = $("#Status").val();

        if ($.fn.DataTable.isDataTable('#tbl')) {
            $('#tbl').DataTable().destroy();
        }

        var table = $("#tbl").DataTable({
            "processing": true,
            "serverSide": true,
            "searching": true,
            "fixedHeader": true,
            "ajax": {
                "url": "@Url.Action("getData")",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [

                { "data": "idNumber", "name": "IdNumber", "autoWidth": true },
                { "data": "name", "name": "Name", "autoWidth": true },
                { "data": "position", "name": "Position", "autoWidth": true },
                { "data": "status", "name": "Status", "autoWidth": true },

                {
                    //data-idnumber=' + row.no + ' data - desc=' + row.description + ' data - desc2=' + row.description2 + ' data - descliq=' + row.OfficeCode + ' data - type=' + row.typeList +
                    render: function (data, type, row) {


                        $idNumber = (row.idNumber == "") ? null : row.idNumber;
                        $name = (row.name == "") ? null : row.name;
                        $position = (row.position == "") ? null : row.position;
                        $status = (row.status == "") ? null : row.status;

                        $actions =
                            "<a title='Edit' data-id=" + row.id + " data-idnumber='" + $idNumber + "' data-name='" + $name + "' data-position='" + $position + "' data-status='" + $status + "' onclick='showmodal(this);'>Edit</a>";


                        return $actions;
                    }
                }


            ]
            //,
            //"columnDefs": [{ "orderable": false, "targets": [1, 2, 3] }]


        });

        $(document).on("keyup", '[id ^= "searchCol"]', function (e) {
            if (e.which == 13) {
                var Id = $(this).attr('id');

                var col = Id.replace(/[^0-9]/g, '');

                table.columns(col).search(this.value).draw();
            }
        });
        function searchFunction(e) {

            delay(function () {
                console.log(e);
                table.column($(e).parent().index() + ':visible')
                    .search(e.value)
                    .draw();
            }, 1000);
        }
        $("#tbl_filter").hide();
    }

    var delay = (function () {
        var timer = 0;
        return function (callback, ms) {
            clearTimeout(timer);
            timer = setTimeout(callback, ms);
        };
    })();

    function addmodal() {

        $("#itemId").val(0);
        $("#IDNo").val("");
        $("#IDNo").removeAttr('disabled');
        $("#Position").val("");
        $("#DriverName").val("");
        $('#modalItem').modal('show');


    }

    function showmodal(obj) {

         //$id = $("#itemId").val();
        //$no = $("#IDNo").val();
        //$position = $("#Position").val();
        //$name = $("#DriverName").val();
        //$status = $("#Status").val();


        $id = $(obj).attr('data-id');
        $no = $(obj).attr('data-idnumber') == "null" ? "" : $(obj).attr('data-idnumber');
        $name = $(obj).attr('data-name') == "null" ? "" : $(obj).attr('data-name');
        $position = $(obj).attr('data-position') == "null" ? "" : $(obj).attr('data-position');
        $status = $(obj).attr('data-status') == "null" ? "" : $(obj).attr('data-status');

        $("#itemId").val($id);
        //$("#IDNo").attr('disabled', 'disabled');
        $("#IDNo").val($no);
        $("#Position").val($position);
        $("#DriverName").val($name);
        $("#Status").val($status);


        $('#modalItem').modal('show');

    }


    function deleteItem(id, desc) {

        if (confirm('This will delete item ' + desc + '. Continue?')) {
            $.ajax({
            url: "@Url.Action("Delete")"
            , method: "POST"
            , data: { id: id }
            , dataType: 'json'
            , success: function (responsedata) {
               if (responsedata.status == "success") {
                   toastr["success"]("Item Deleted","<b>Success</b> ")
                   loadDatatable();


                } else {

                    toastr["error"](responsedata.message)
                    toastr.options = {
                        "closeButton": true,
                        "showDuration": "3000",
                    }
                }
            }
        })

        }
    }
    </script>
    }

